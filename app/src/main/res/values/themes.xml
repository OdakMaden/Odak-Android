    </style>

    <style name="odak.textview.currency_detail.increase" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/metropolis_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="odak.textview.currency_detail.time_date" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>